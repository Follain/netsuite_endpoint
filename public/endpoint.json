{
  "name": "netsuite",
  "display": "NetSuite Endpoint",
  "description": "Sync products, stock, customers, orders and shipments with NetSuite ERP",
  "help": "http://guides.spreecommerce.com/integration/endpoints/netsuite",
  "icon_url": "netsuite.png",
  "services": [
    {
      "name": "products",
      "path": "/products",
      "description": "Fetch products via NetSuite",
      "requires": {
        "parameters": [{
          "name": "email",
          "description": "NetSuite user email",
          "data_type": "string"
        }, {
          "name": "password",
          "description": "NetSuite user password",
          "data_type": "password"
        }, {
          "name": "account",
          "description": "NetSuite account",
          "data_type": "string"
        }, {
          "name": "role_id",
          "description": "NetSuite role id",
          "data_type": "string"
        }, {
          "name": "sandbox",
          "description": "NetSuite sandbox",
          "data_type": "boolean"
        }, {
          "name": "last_updated_after",
          "description": "Date of last item imported",
          "data_type": "string"
        }]
      },
      "recommends": {
        "messages": ["netsuite:product:poll"],
        "schedule": { "count": 30, "interval": "minutes" }
      }
    },
    {
      "name": "inventory_stock",
      "path": "/inventory_stock",
      "description": "",
      "requires": {
        "parameters": [{
          "name": "email",
          "description": "NetSuite user email",
          "data_type": "string"
        }, {
          "name": "password",
          "description": "NetSuite user password",
          "data_type": "password"
        }, {
          "name": "account",
          "description": "NetSuite account",
          "data_type": "string"
        }]
      },
      "recommends": {
        "messages": ["stock:query"]
      }
    },
    {
      "name": "orders",
      "path": "/orders",
      "description": "Exports orders to NetSuite",
      "requires": {
        "parameters": [{
          "name": "email",
          "description": "NetSuite user email",
          "data_type": "string"
        }, {
          "name": "password",
          "description": "NetSuite user password",
          "data_type": "password"
        }, {
          "name": "account",
          "description": "NetSuite account",
          "data_type": "string"
        }, {
          "name": "role_id",
          "description": "NetSuite role id",
          "data_type": "string"
        }, {
          "name": "sandbox",
          "description": "NetSuite sandbox",
          "data_type": "boolean"
        }, {
          "name": "shipping_methods_mapping",
          "description": "Mapping from Spree Shipping method names to NetSuite Ship Item ids",
          "data_type": "list"
        }]
      },
      "recommends": {
        "messages": ["order:new", "order:updated"]
      }
    },
    {
      "name": "order_cancellations",
      "path": "/order_cancel",
      "description": "Exports orders cancellations to NetSuite",
      "requires": {
        "parameters": [{
          "name": "email",
          "description": "NetSuite user email",
          "data_type": "string"
        }, {
          "name": "password",
          "description": "NetSuite user password",
          "data_type": "password"
        }, {
          "name": "account",
          "description": "NetSuite account",
          "data_type": "string"
        }, {
          "name": "role_id",
          "description": "NetSuite role id",
          "data_type": "string"
        }, {
          "name": "sandbox",
          "description": "NetSuite sandbox",
          "data_type": "boolean"
        }]
      },
      "recommends": {
        "messages": ["order:canceled"]
      }
    }, {
      "name": "shipments",
      "path": "/shipments",
      "description": "Fulfills orders on NetSuite",
      "requires": {
        "parameters": [{
          "name": "email",
          "description": "NetSuite user email",
          "data_type": "string"
        }, {
          "name": "password",
          "description": "NetSuite user password",
          "data_type": "password"
        }, {
          "name": "account",
          "description": "NetSuite account",
          "data_type": "string"
        }, {
          "name": "role_id",
          "description": "NetSuite role id",
          "data_type": "string"
        }]
      },
      "recommends": {
        "messages": ["shipment:confirm"]
      }
    }
  ]
}
